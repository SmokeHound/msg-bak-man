<Window x:Class="MsgBakMan.App.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="About Message Backup Manager"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Icon="Assets/msgbakman.ico">
    <Border Background="{DynamicResource AppBackgroundBrush}" Padding="16">
        <Border Style="{StaticResource CardBorderStyle}" Padding="16">
            <StackPanel Width="440">
                <TextBlock Text="Message Backup Manager" Style="{StaticResource AppTitleTextStyle}" />
                <TextBlock x:Name="VersionText" Margin="0,6,0,0" Style="{StaticResource MutedTextStyle}" />

                <TextBlock Margin="0,14,0,0" TextWrapping="Wrap">
                    Import, merge, and export SMS Backup &amp; Restore XML backups.
                </TextBlock>

                <TextBlock x:Name="RuntimeText" Margin="0,12,0,0" Style="{StaticResource MutedTextStyle}" TextWrapping="Wrap" />

                <Border x:Name="ProjectSection" Style="{StaticResource CardBorderStyle}" Padding="12" Margin="0,14,0,0">
                    <StackPanel>
                        <TextBlock Text="Project" Style="{StaticResource SectionHeaderTextStyle}" />

                        <TextBlock x:Name="ProjectFolderText" Margin="0,6,0,0" Style="{StaticResource MutedTextStyle}" TextWrapping="Wrap" />

                        <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                            <Button x:Name="OpenProjectFolderButton" Content=" Open project " Style="{StaticResource SecondaryButtonStyle}" Click="OpenProjectFolder_Click" />
                            <Button x:Name="OpenDbFolderButton" Content=" Open DB " Style="{StaticResource SecondaryButtonStyle}" Margin="10,0,0,0" Click="OpenDbFolder_Click" />
                            <Button x:Name="OpenMediaFolderButton" Content=" Open Media " Style="{StaticResource SecondaryButtonStyle}" Margin="6,0,0,0" Click="OpenMediaFolder_Click" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                    <Button Content="OK" Width="90" IsDefault="True" Style="{StaticResource PrimaryButtonStyle}" Click="Ok_Click" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Border>
</Window>
