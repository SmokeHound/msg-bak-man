<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Theme brushes (default = Light). Updated at runtime when the user toggles Light/Dark. -->
  <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFF2F4F8" />
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFFFF" />
  <SolidColorBrush x:Key="CardBorderBrush" Color="#22000000" />
  <SolidColorBrush x:Key="MutedForegroundBrush" Color="#6B7280" />
  <SolidColorBrush x:Key="AccentBrush" Color="#FF2563EB" />
  <SolidColorBrush x:Key="AccentBrushHover" Color="#FF1D4ED8" />
  <SolidColorBrush x:Key="AccentBrushPressed" Color="#FF1E40AF" />
  <SolidColorBrush x:Key="AccentSoftBrush" Color="#142563EB" />
  <SolidColorBrush x:Key="AccentSoftHoverBrush" Color="#1F2563EB" />
  <SolidColorBrush x:Key="AccentSoftPressedBrush" Color="#2A2563EB" />
  <SolidColorBrush x:Key="GhostHoverBrush" Color="#0F000000" />
  <SolidColorBrush x:Key="GhostPressedBrush" Color="#1A000000" />

  <DropShadowEffect x:Key="CardShadowEffect" Color="#12000000" BlurRadius="18" ShadowDepth="2" Opacity="1" />

  <!-- Typography -->
  <Style x:Key="AppTitleTextStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="22" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
  </Style>

  <Style x:Key="AppSubtitleTextStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}" />
    <Setter Property="FontSize" Value="12" />
    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
  </Style>

  <Style x:Key="SectionHeaderTextStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
    <Setter Property="FontSize" Value="13" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style x:Key="MutedTextStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource MutedForegroundBrush}" />
  </Style>

  <Style x:Key="EllipsisText" TargetType="TextBlock">
    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    <Setter Property="TextWrapping" Value="NoWrap" />
  </Style>

  <!-- Cards -->
  <Style x:Key="CardBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="16" />
    <Setter Property="Effect" Value="{DynamicResource CardShadowEffect}" />
  </Style>

  <!-- Buttons -->
  <Style x:Key="PrimaryButtonStyle" TargetType="Button">
    <Setter Property="Foreground" Value="White" />
    <Setter Property="Background" Value="{DynamicResource AccentBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="14,10" />
    <Setter Property="MinHeight" Value="36" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrushHover}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrushPressed}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
    <Setter Property="Background" Value="{DynamicResource AccentSoftBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource AccentBrush}" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10" BorderBrush="{DynamicResource CardBorderBrush}" BorderThickness="1">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentSoftHoverBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentSoftPressedBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="GhostButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="MinHeight" Value="34" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="10">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource GhostHoverBrush}" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
              <Setter TargetName="Bd" Property="Background" Value="{DynamicResource GhostPressedBrush}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter TargetName="Bd" Property="Opacity" Value="0.55" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Inputs (wrap TextBox in a rounded Border) -->
  <Style x:Key="RoundedInputBorderStyle" TargetType="Border">
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="BorderBrush" Value="{DynamicResource CardBorderBrush}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Background" Value="#08FFFFFF" />
    <Setter Property="Padding" Value="10,6" />
    <Style.Triggers>
      <Trigger Property="IsKeyboardFocusWithin" Value="True">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}" />
        <Setter Property="Background" Value="#0AFFFFFF" />
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="MinHeight" Value="26" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

  <Style x:Key="CompactComboBoxStyle" TargetType="ComboBox">
    <Setter Property="MinHeight" Value="28" />
    <Setter Property="Padding" Value="6,2" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="VerticalContentAlignment" Value="Center" />
  </Style>

</ResourceDictionary>
